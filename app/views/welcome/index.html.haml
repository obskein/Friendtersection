.container_12
  .grid_4
    %h1 Friendtersection

  .grid_4
    - if logged_in?
      %p You are logged in
      %p Special codes enabled
  .grid_4
    - if logged_in?
      = button_to "Logout", login_path, :method => "delete"
    - else
      = button_to "Yes! I want to enable special facebook codez ", login_path, :method => :post

.clear
.container_12
  - if @user
    %dl.grid_8
      %dt User:
      %dd= @user.inspect

  - if @likes
    %dl.grid_4
      %dt Likes:
      %dd= render_likes @likes

.container_12
  - if @friend
    %dl.grid_8
      %dt Friend ID:
      %dd= @friend_id.inspect
      %dt Friend:
      %dd= @friend.inspect

  - if @friends_likes
    %dl.grid_4
      %dt Friends likes:
      %dd= render_likes @friends_likes



.container_12
  .grid_3
    &nbsp;
  - if @intersection
    %dl.grid_9
      %dt Ah! You both like:
      %dd= render_likes @intersection
      %dd intersection of your likes and your friends likes

- if @friends
  .clear
  .container_12
    %h2 Friends:
    - @friends.each do |friend|
      %span.grid_3= link_to friend["name"], :friend_id => friend["id"]
